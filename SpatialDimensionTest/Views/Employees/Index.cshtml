@model IEnumerable<SpatialDimensionTest.Models.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 align="center">Employee Index</h2>

<div style="height:auto">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Superior)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.EmpID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Job)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Superior)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.EmpID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.EmpID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.EmpID })
                </td>
            </tr>
        }

    </table>
</div>

<p>
    @Html.ActionLink("Add New Employee", "Create")
</p>
<p>
    @Html.ActionLink("Search", "Search")
</p>
